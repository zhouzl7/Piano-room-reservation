/* pages/book/book.wxss */
page{
  background-color: #EDEDED;
}
.Days {
  margin-top: -100px;
  width: 90%;
  flex-direction: row;
  display: flex;
  padding: 40rpx 0;
}
.DayBtn{
  width:100%;
}

.roomAndTime{
  flex-direction: row;
  display: flex;
  width: 100%;
  height:  600rpx;
}

.Rooms {
  width: 40%;
  flex-direction: column;
  flex-wrap: wrap;
  display: flex;
  padding: 40rpx 0;
}
.RoomBtn{
  margin-left: 40rpx;
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  justify-content: center;
}

.Times {
  width: 60%;
  flex-direction: row;
  flex-wrap: wrap;
  display: flex;
  padding: 40rpx 0;
  line-height: 80rpx;
}

.Time{
  font-size: 30rpx;
  margin-left: 0rpx;
  width: 400rpx;
}

.money{
  font-size: 50rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.makesure{
  margin: 20rpx;
  width:40%;
}