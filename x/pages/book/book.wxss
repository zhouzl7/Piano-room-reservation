/* pages/book/book.wxss */
page{
  background-color: #EDEDED;
}
.table {
  border-bottom: 1px solid rgba(169, 169, 169, 0.521);
  
}
.head{
  background-color: white;
  height: 50px;
}
.last{
  flex-direction: row;
  position: absolute;
  display: flex;
  width:100%;
  height:44px;
  bottom:0;
  
}
.Days {
  width: 100%;
  flex-direction: row;
  display: flex;
}
.DayBtn{
  border-bottom: 1px solid rgba(169, 169, 169, 0.521);
  color: cornflowerblue;
  width:100%;
  justify-content: center;
  border-radius: 0;
  border-width: 1rpx;
  background-color: #fff;
  font-size: 16px;
}
.DayBtn::after{
  border: none;
}

.Day1{
  height: 10rpx;
  width: 60%;
  border-color: #fff;
}
.Day1::after{
  border: none;
}
.container{
  overflow-y: scroll;
}


.roomAndTime{
  height: 700rpx;
  flex-direction: row;
  display: flex;
  width: 100%;
}

.Rooms {
  width: 30%;
  flex-direction: column;
  flex-wrap: wrap;
  display: flex;
  text-align: center;
}
.RoomBtn{
  height: 80rpx;
  line-height: 80rpx;
  justify-content: center;
  background-color: #fff;
}

.Times {
  width: 70%;
  flex-direction: row;
  flex-wrap: wrap;
  display: flex;
  line-height: 80rpx;
}

.Time{

  width: 100%;
  font-size: 30rpx;
  text-align: center;
  }

.money{
  font-weight: bold;
  color:#fff;
  width:100%;
  justify-content: center;
  border-radius: 0;
  border-width: 1rpx;
  background-color:rgba(0, 0, 0, 0.9);
  font-size: 18px;
}
.makesure{
  font-weight: bold;
  width:40%;
  justify-content: center;
  border-radius: 0;
  border-width: 1rpx;
  background-color: cornflowerblue;
  font-size: 18px;
}
.type{
  opacity: 0.5;
  width:20%;
  justify-content: center;
  border-radius: 0;
  border-width: 1rpx;
  font-size: 16px;
}
